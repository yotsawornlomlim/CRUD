@model IEnumerable<FirstProject.Models.db.Category>;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No Data Found</div>
}
else
{
    <table id="mytable">
        <thead>
            <tr>
                <td>ID</td>
                <td>Category Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                </tr>
            }
        </tbody>
    </table>
}
@model IEnumerable<FirstProject.Models.db.Category>;
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
@if (Model.Count()<=0)
{
    <div class="alert alert-danger"> No Data Found</div>
}
else
{
    <table id="mytable">
        <thead>
            <td>ID</td>
            <td>Name</td>
            <td>Update</td>
            <td>Delete</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a class="btn btn-warning"
                        asp-controller="Category"
                        asp-action="ShowUpd"
                        asp-route-id="@item.CategoryId"
                        onclick="return confirm('Do you want to update @item.CategoryName ?')">
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           asp-controller="Category"
                           asp-action="DelDB"
                           asp-route-id="@item.CategoryId"
                           onclick="return confirm('Do you want to Delete @item.CategoryName')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}